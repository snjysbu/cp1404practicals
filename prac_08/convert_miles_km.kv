BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            font_size: 48
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            height: '48dp'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
 #   Button:
    #    text: 'Convert miles to km'
       # on_press: app.handle_convert()
    Label:
        id: output_label
        text: app.output_km
        color: (1, 1, 0, 1)
        font_size: 48